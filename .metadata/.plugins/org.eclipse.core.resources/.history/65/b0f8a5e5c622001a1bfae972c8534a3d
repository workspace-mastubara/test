package com.internousdev.ecsite.dao;

import com.internousdev.ecsite.util.DBConnector;
import java.sql.SQLException;
import java.sql.Connection;
import java.sql.PreparedStatement;
import

public class itemCreateConfirmDAO {

	public void itemCreate(String itemName, int itemPrice, int itemStock){
		DBConnector db = new DBConnector();
		Connection con = db.getConnect();

		String sql = "INSERT INTO item_info_transaction(item_name, item_price, item_stock) VALUES(?,?,?)";

		try {
			PreparedStatement ps = con.prepareStatement(sql);
			ps.setString(1, itemName);
			ps.setInt(2, itemPrice);
			ps.setInt(3, itemStock);
			ps.execute();

			}
		}

	}

}
