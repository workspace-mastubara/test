drop database if exists template2;
create database if not exists template2;
use template2;

drop table if exists itemIT;

create table itemIT(
id int not null primary key auto_increment,
item_name varchar(30),
item_price int,
item_stock int,
insert_date datetime,
update_date datetime);


drop table if exists loginUT;

create table loginUT(
id int not null primary auto_increment,
login_id varchar(16) unique,
login_pass varchar(16),
user_name varchar(50),
insert_date datetime,
update_date datetime);


drop table if exists userBIT;

create table userBIT(
id int not null primary auto_increment,
item_transaction_id int,
total_price int,
total_count int,
user_master_id varchar(16),
pay varchar(30),
insert_date datetime,
delete_date datetime);


insert into itemIT(item_name,item_price,item_stock)values
("ノートBook",100,50);

insert into loginUT(login_id,login_pass,user_name)values
("internous","internous01","test");
